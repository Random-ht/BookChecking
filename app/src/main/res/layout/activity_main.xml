<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorPrimary"
        android:enabled="true"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hc.book.checking.ui.custom.CustomActionBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:center_title="图书查重"
            custom:left_image_vis="@integer/GONE"
            custom:right_image_vis="@integer/GONE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/import_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_import"
                android:gravity="center"
                android:padding="10dp"
                android:text="导入数据" />

            <TextView
                android:id="@+id/content_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/icon_content_search"
                android:gravity="center"
                android:padding="10dp"
                android:text="图书查询" />

            <TextView
                android:id="@+id/scan_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_scan_search"
                android:gravity="center"
                android:padding="10dp"
                android:text="扫码查询" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_import"
                android:gravity="center"
                android:padding="10dp"
                android:text="盘点机" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/icon_content_search"
                android:gravity="center"
                android:padding="10dp"
                android:text="图书查询"
                android:visibility="invisible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_scan_search"
                android:gravity="center"
                android:padding="10dp"
                android:text="扫码查询"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
